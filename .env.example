# ============================================================
# AI-Powered Deal Desk - Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control.
# ============================================================

# ------------------------------------------------------------
# Required
# ------------------------------------------------------------
# Your OpenAI API key (get one at https://platform.openai.com)
OPENAI_API_KEY=sk-your-key-here

# ------------------------------------------------------------
# Server
# ------------------------------------------------------------
# Port the server listens on
PORT=8000

# Host to bind to (use 0.0.0.0 for Docker / Railway)
HOST=0.0.0.0

# Enable hot-reload in development (true/false)
RELOAD=false

# ------------------------------------------------------------
# CORS
# ------------------------------------------------------------
# Comma-separated list of allowed frontend origins
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ------------------------------------------------------------
# OpenAI
# ------------------------------------------------------------
# Model to use for proposal generation
OPENAI_MODEL=gpt-4-turbo-preview

# ------------------------------------------------------------
# Pricing
# ------------------------------------------------------------
# Base price (Professional tier) in USD used by generate_pricing_tiers()
BASE_PRICE=10000

# ------------------------------------------------------------
# Statistics (override with real values from your DB / analytics)
# ------------------------------------------------------------
STAT_PROPOSALS_TODAY=0
STAT_WIN_RATE=42%
STAT_GEN_TIME=58 seconds
STAT_REVENUE_IMPACT=$0 pipeline created
